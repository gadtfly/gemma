<body id="sales-screen">
<h2 class="text-center text-uppercase">Your Sales History</h2>
<p class="text-center">Here is where you will view all your sales history - keep those great products coming!</p>
<div class="p15">
  <button class=" btn btn-primary center-block text-uppercase">
    <%= link_to 'Add New Product', new_listing_path %>
  </button>
</div>

<table class="table table-border">
  <tr>
    <th class="text-center">Image</th>
    <th class="text-center">Name</th>
    <th class="text-center">Price</th>
    <th class="text-center">Customer</th>
    <th class="text-center">Date Sold</th>
  </tr>
  <% @orders.each do |order| %>
  <tr>
    <td class="text-center"><%= image_tag order.listing.image.url(:thumb)%></td>
    <td class="text-center"><%= order.listing.name %></td>
    <td class="text-center"><%= number_to_currency(order.listing.price) %></td>
    <td class="text-center"><%= order.buyer.name %></td>
    <td class="text-center"><%= order.created_at.strftime("%B %-d, %Y") %></td>
  </tr>
  <% end %>
</table>
</body>
