<div class="cart">
	<table class="table">
		<% @shopping_cart.shopping_cart_items.each do |shopping_cart_item| %>
		<tr>
			<td><%= shopping_cart_item.item.name %></td>
			<td><%= number_to_currency(shopping_cart_item.price) %></td>
		</tr>
		<% end %>
		<tr class="cart-info">
		<td>Cart Subtotal:</td>
			<td>
				<%= number_to_currency(@shopping_cart.total) %>
			</td>
		</tr>
	</table>
	<div class="">
	<%= link_to "View Cart", cart_path, class: "btn btn-primary btn-block" %>
		<%= link_to "Go to Checkout", checkout_path, class: "btn btn-primary btn-block" %>
	</div>
</div>
